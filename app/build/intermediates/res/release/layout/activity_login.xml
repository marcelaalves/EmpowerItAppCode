<AbsoluteLayout
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/bluebar"
        android:id="@+id/ll">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/naming" />
    </LinearLayout>

    <ImageView
        android:id="@+id/widget34"
        android:layout_width="149dp"
        android:layout_height="144dp"
        android:src="@drawable/logo"
        android:layout_x="107dp"
        android:layout_y="86dp" />

    <ImageView
        android:layout_width="246dp"
        android:layout_height="19dp"
        android:id="@+id/imageView2"
        android:layout_x="57dp"
        android:layout_y="244dp"
        android:src="@drawable/slogan" />

    <EditText

        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:shadowColor="#152D53"
        android:id="@+id/user_name"
        android:gravity="center"
        android:hint="email"
        android:textSize="12sp"
        android:layout_x="-1dp"
        android:layout_y="284dp" />



    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:shadowColor="#152D53"
        android:gravity="center"
        android:hint="password"
        android:password="true"
        android:textSize="12sp"
        android:layout_x="3dp"
        android:layout_y="316dp" />



    <TextView
        android:id="@+id/login_error"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_x="73dp"
        android:layout_y="431dp"
        android:textColor="#ffff0000"
        android:visibility="invisible"
        android:text="It was not possible complete your login. Please try again." />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="133dp"
        android:layout_height="45dp"
        android:layout_x="137dp"
        android:layout_y="352dp"
        android:background="@drawable/login_button"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_x="516dp"
        android:layout_y="328dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="forgot the password"
        android:id="@+id/textView2"
        android:layout_x="141dp"
        android:layout_y="405dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:id="@+id/button"
        android:layout_x="147dp"
        android:layout_y="479dp"
        android:background="@android:drawable/screen_background_light_transparent"/>


</AbsoluteLayout>
